{
  "name": "@aaronsb/kg-cli",
  "version": "0.6.6",
  "description": "Knowledge Graph CLI and MCP server - interact with knowledge graph systems",
  "main": "dist/index.js",
  "bin": {
    "kg": "dist/index.js",
    "kg-mcp-server": "dist/mcp-server.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/generate-version.js && tsc && npm run postbuild && npm run docs:generate",
    "postbuild": "chmod +x dist/index.js dist/mcp-server.js",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "node scripts/check-docs.js",
    "docs:check": "node scripts/check-docs.js",
    "docs:generate": "npm run docs:cli && npm run docs:mcp",
    "docs:cli": "node scripts/simple-doc-gen.mjs",
    "docs:mcp": "node scripts/generate-mcp-docs.mjs"
  },
  "keywords": [
    "knowledge-graph",
    "cli",
    "mcp",
    "model-context-protocol",
    "ai",
    "graph-database"
  ],
  "author": "Aaron Bockelie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aaronsb/knowledge-graph-system.git",
    "directory": "cli"
  },
  "homepage": "https://github.com/aaronsb/knowledge-graph-system#readme",
  "bugs": {
    "url": "https://github.com/aaronsb/knowledge-graph-system/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@types/asciichart": "^1.5.8",
    "@types/minimatch": "^5.1.2",
    "@types/prompts": "^2.4.9",
    "ansis": "^4.2.0",
    "asciichart": "^1.5.25",
    "axios": "^1.6.0",
    "cfonts": "^3.3.1",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "eventsource": "^4.0.0",
    "form-data": "^4.0.0",
    "log-update": "^6.1.0",
    "minimatch": "^10.1.1",
    "ora": "^5.4.1",
    "prompts": "^2.4.2",
    "slice-ansi": "^7.1.2",
    "string-width": "^8.1.0",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.12.0"
  }
}
